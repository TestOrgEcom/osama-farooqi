{{ 'component-of-button.css' | asset_url | stylesheet_tag: preload: true }}
{{ 'section-of-product-collection.css' | asset_url | stylesheet_tag: preload: true }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="of-page section-{{ section.id }} section-{{ section.id }}-padding">
    <div class="{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      <div class="of-container of-product-collection">
        {% if section.settings.of_heading %}
          <p>{{ section.settings.of_heading }}</p>
        {% endif %}
        <div class="of-product-colletion">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'product' %}
                <img
                  src="{{ block.settings.of_product.featured_image | image_url: 'master' }}"
                  alt="{{ block.settings.of_product.alt | escape | default: routes.title }}"
                  width="auto"
                  height="auto"
                >
            {% endcase %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{% comment %} <script src="{{ '.js' | asset_url }}" defer="defer"></script> {% endcomment %}
{% schema %}
{
  "name": "Of Prodcut Collection",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "max_blocks": 6,
  "settings": [
    {
      "type": "text",
      "id": "of_heading",
      "label": "Heading",
      "default": "Text goes here"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "limit": 6,
      "settings": [
        {
          "type": "product",
          "id": "of_product",
          "label": "Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Of Prodcut Collection"
    }
  ]
}
{% endschema %}
