{{ 'component-of-button.css' | asset_url | stylesheet_tag }}
{{ 'section-of-banner.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
   
 .section-{{ section.id }} .of-banner-container .of-banner {  
  background-image: url('{{ section.settings.of_banner_image | image_url: 'master' | image_url }}'); /* set the background image */
  height: 780px;
  background-size: cover;     
  background-position: center; 
  background-repeat: no-repeat; 
  border-radius: 8px;
 }

  .section-{{ section.id }} .of-header-container .of-color-bg {  
    background-color: {{ section.settings.of_header_bg_color }}; 
  }

 @media screen and (max-width: 749px) {
    .section-{{ section.id }} .of-banner-container .of-banner {  
      background-image: url('{{ section.settings.of_banner_image_mobile | image_url: 'master' | image_url }}'); /* set the background image */
      height: 421px;
      background-size: contain;
      background-position: bottom;
      background-repeat: no-repeat;
    }
    .section-{{ section.id }} .of-banner-container .of-banner .of-banner-content .banner-description {
      content: {{ section.settings.banner_description_mobile | escape }};
    }
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="of-page section-{{ section.id }} section-{{ section.id }}-padding">
    <div class="{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      <div class="of-container of-banner-container of-header-container">
        <!-- Banner Header: start -->
        <div class="of-header of-color-bg">
          <p class="of-header-icon">
            {%- if section.settings.of_logo != blank -%}
              <img src="{{ section.settings.of_logo | image_url }}" alt="Logo Icon" width="150" height="auto">
            {% endif %}
          </p>
          <p class="of-header-text">
             {%- if section.settings.of_header_text != blank -%}
              {{ section.settings.of_header_text  }}
            {% endif %}
          </p>
          {%- if section.settings.of_header_button_text or section.settings.of_header_button_url -%}
             <a
                href="{{ section.settings.of_header_button_url }}"
                class="sweep-link of-button" 
                aria-label="{{ section.settings.of_header_button_text | escape | default: 'Button' }}"
              >
                {{ section.settings.of_header_button_text | escape | default: 'Button' | upcase}}
                <img alt="Banner Icon" width="24" height="auto"> <!-- Arrow Icon, will replace the icon using css styling -->
              </a>
          {%- endif -%}
        </div>
        <!-- Banner Header: end -->

        <!-- Banner: start -->

          <div class="of-banner">
            <div class="of-banner-content">
              {% if section.settings.banner_heading %}<h2 class="banner-heading">{{ section.settings.banner_heading }}</h2> {% endif %}
              {% if section.settings.banner_description %}<p class="banner-description of-desktop-only">{{ section.settings.banner_description }}</p> {% endif %}
              {% if section.settings.banner_description_mobile %}<p class="banner-description of-mobile-only">{{ section.settings.banner_description_mobile }}</p> {% endif %}
                {%- if section.settings.of_button_text or section.settings.of_button_url -%}
                  <div class="of-banner-button {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
                    <p></p>
                    <a
                      href="{{ section.settings.of_button_url }}"
                      class="sweep-link of-button of-button-scandory" 
                      aria-label="{{ section.settings.of_button_text | escape | default: 'Button' }}"
                    >
                      {{ section.settings.of_button_text | escape | default: 'Button' | upcase}}
                      <img alt="Banner Icon" width="24" height="auto"> <!-- Arrow Icon, will replace the icon using css styling -->
                    </a>
                  </div>
                {%- endif -%}
            </div>    
          </div>
      
        <!-- Banner: end -->

        <!-- Banner Bottom: start -->
        <!-- Banner Bottom: end -->
      </div>
    </div>
  </div>
</div>

