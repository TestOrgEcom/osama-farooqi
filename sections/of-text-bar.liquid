{{ 'component-of-button.css' | asset_url | stylesheet_tag }}
{{ 'section-of-text-bar.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .section-{{ section.id }} .of-text-bar-container .of-color-bg {  
    background-color: {{ section.settings.of_text_bar_bg_color }}; 
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

  <div class="of-page section-{{ section.id }} section-{{ section.id }}-padding">
      <div class="of-container of-text-bar-container">
        <div class="of-text-bar of-color-bg">
          {%- if section.settings.of_text_bar_text != blank -%}<p class="of-text-bar-text of-desktop-only">{{ section.settings.of_text_bar_text  }}</p>{% endif %}
          {%- if section.settings.of_text_bar_mobile_text != blank -%}<p class="of-text-bar-text of-mobile-only">{{ section.settings.of_text_bar_mobile_text  }}</p>{% endif %}
        </div>
      </div>
  </div>

{% schema %}
{
  "name": "Of Text Bar",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "of_text_bar_text",
      "label": "Text",
      "default": "Text goes here"
    },
    {
      "type": "text",
      "id": "of_text_bar_mobile_text",
      "label": "Text Mobile",
      "default": "Text goes here for mobile"
    },
    {
      "type": "color",
      "id": "of_text_bar_bg_color",
      "label": "Background color",
      "default": "#F5F5F5"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Of Text Bar"
    }
  ]
}
{% endschema %}
